<UserControl x:Class="phone_utils.ScrcpyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource AppBackgroundColor}">

    <UserControl.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource ButtonForeground}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ButtonHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ButtonHover}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#d3d3d3"/>
                                <Setter Property="Foreground" Value="#777"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ToggleCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Border x:Name="border"
                        Background="#444"
                        CornerRadius="6"
                        BorderThickness="0"
                        Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4CAF50"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#555"/>
                                <Setter Property="Foreground" Value="#aaa"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#222"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="CaretBrush" Value="White"/>
        </Style>

        <!-- Label/CheckBox Style -->
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Resources>

    <!-- Grid wrapper -->
    <Grid>
        <Border Background="#2a2a2a"
                CornerRadius="8"
                Padding="12"
                BorderBrush="Gray"
                BorderThickness="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
            <StackPanel>
                <!-- Title -->
                <TextBlock Text="Scrcpy Options"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,4"/>

                <!-- Controls Layout -->
                <DockPanel LastChildFill="False" Margin="0">
                    <!-- Audio Options -->
                    <StackPanel DockPanel.Dock="Left" Margin="0,0,0,0">
                        <CheckBox x:Name="ChkAudioOnly" Content="Audio Only" Margin="2"
          Checked="ChkAudio_Checked" Unchecked="ChkAudio_Unchecked" Style="{StaticResource ToggleCheckBoxStyle}"/>
                        <CheckBox x:Name="ChkNoAudio" Content="No Audio" Margin="2"
          Checked="ChkAudio_Checked" Unchecked="ChkAudio_Unchecked" Style="{StaticResource ToggleCheckBoxStyle}"/>
                        <CheckBox x:Name="ChkPlaybackAudio" Content="Playback Audio" Margin="2"
          Checked="ChkAudio_Checked" Unchecked="ChkAudio_Unchecked" Style="{StaticResource ToggleCheckBoxStyle}"/>

                        <CheckBox x:Name="ChkTop" Content="Always on top" Margin="2" Style="{StaticResource ToggleCheckBoxStyle}"/>
                        <CheckBox x:Name="Chkaudiobuffer" Content="Audio buffer Size:" Margin="2,2,2,4" Style="{StaticResource ToggleCheckBoxStyle}"/>
                        <CheckBox x:Name="Chkvideobuffer" Content="Video buffer Size:" Margin="2,2,2,4" Style="{StaticResource ToggleCheckBoxStyle}"/>
                        <CheckBox x:Name="ChkMaxSize" Content="Limit Max Size:" IsChecked="True" Margin="2,3,2,3" Style="{StaticResource ToggleCheckBoxStyle}"/>
                        <Button x:Name="camera" Click="BtnCamera_click" Content="Camera mode:" Margin="2,4,2,6" Style="{StaticResource ModernButtonStyle}"/>
                        <Button x:Name="BtnDisplay" Click="BtnDisplay_click" Content="virtual display:" Margin="2,3,2,4" Style="{StaticResource ModernButtonStyle}"/>
                        <CheckBox x:Name="ChkAutoEnable" Checked="ChkAutoEnable_Checked" Content="Auto-start" IsChecked="False" Margin="2,3,2,3" Style="{StaticResource ToggleCheckBoxStyle}"/>
                        <!-- Moved down -->
                    </StackPanel>


                    <!-- Screen Options -->
                    <StackPanel DockPanel.Dock="Left" Margin="0,0,0,0">
                        <CheckBox x:Name="ChkStayAwake" Content="Stay Awake" IsChecked="True" Margin="2" Style="{StaticResource ToggleCheckBoxStyle}"/>
                        <CheckBox x:Name="ChkTurnScreenOff" Content="Turn Screen Off" IsChecked="True" Margin="2" Style="{StaticResource ToggleCheckBoxStyle}"/>
                        <CheckBox x:Name="ChkLockAfterExit" Content="Lock Phone After Closing" IsChecked="True" Margin="2" Style="{StaticResource ToggleCheckBoxStyle}"/>
                        <CheckBox x:Name="ChkEnableHotkeys" Content="Enable Global Hotkeys" IsChecked="True" Margin="2" 
                                  Checked="ChkEnableHotkeys_Checked" Unchecked="ChkEnableHotkeys_Unchecked" Style="{StaticResource ToggleCheckBoxStyle}"/>

                        <TextBox x:Name="TxtAudioBuffer" Text="50"
                                 VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Margin="2" Height="25"/>
                        <TextBox x:Name="TxtVideoBuffer" Text="50"
                                 VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Margin="2" Height="25"/>
                        <TextBox x:Name="TxtMaxSize" Text="2440"
                                 VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Margin="2" Height="25"/>
                        <ComboBox x:Name="CmbCameraList" Width="200" Margin="2" HorizontalAlignment="Left" SelectedIndex="0" Height="25">
                            <ComboBoxItem Content="Front" />
                            <ComboBoxItem Content="Back" />
                            <ComboBoxItem Content="External" />
                        </ComboBox>

                        <!-- ComboBox for installed Android apps -->
                        <ComboBox x:Name="CmbAndroidApps"
                          Width="200" Margin="2" IsEditable="True" HorizontalAlignment="Left" Height="25"/>
                    </StackPanel>

                    <!-- Start Button -->
                    <Button x:Name="BtnStartScrcpy"
                            Content="Start Session"
                            Width="130"
                            Height="71"
                            Style="{StaticResource ModernButtonStyle}" />
                </DockPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>