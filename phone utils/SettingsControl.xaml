<UserControl x:Class="phone_utils.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:phone_utils"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600"
             Background="#661E1E1E">

    <UserControl.Resources>
        <!-- Converter to show SelectedItem (supports objects with Name or plain strings) -->
        <local:SelectedItemDisplayConverter x:Key="SelectedItemDisplayConverter" />
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonBackground}" />
            <Setter Property="Foreground" Value="{DynamicResource ButtonForeground}" />
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ButtonHover}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ButtonHover}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#d3d3d3"/>
                                <Setter Property="Foreground" Value="#777"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ColorButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="Gray"
                                BorderThickness="1"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Label/TextBlock Style -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#222"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- ComboBox Style: rounded with white background and black text (fixed layout) -->
        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Border x:Name="Border"
                                    Grid.ColumnSpan="2"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6" />

                            <ContentPresenter x:Name="ContentSite"
                                              Grid.Column="0"
                                              Content="{Binding SelectedItem, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource SelectedItemDisplayConverter}}"
                                              ContentTemplate="{TemplateBinding ItemTemplate}"
                                               Margin="8,2,32,2"
                                               VerticalAlignment="Center"
                                               RecognizesAccessKey="True">
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ComboBox}}"/>
                                    </Style>
                                </ContentPresenter.Resources>
                             </ContentPresenter>

                            <ToggleButton x:Name="ToggleButton"
                                          Grid.Column="1"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          Focusable="False"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          Width="28"
                                          HorizontalAlignment="Right"
                                          VerticalAlignment="Center">
                                <Grid Width="12" Height="8" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Path x:Name="Arrow" Fill="Black" Data="M 0 0 L 6 6 L 12 0 Z" Stretch="Fill"/>
                                </Grid>
                            </ToggleButton>

                            <Popup x:Name="PART_Popup"
                                   Grid.ColumnSpan="2"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Placement="Bottom"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Fade">
                                <Border Background="White" CornerRadius="6" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" SnapsToDevicePixels="True">
                                    <ScrollViewer Margin="0" KeyboardNavigation.DirectionalNavigation="Contained">
                                        <StackPanel IsItemsHost="True" />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Opacity" Value="0.6"/>
                                <Setter Property="Foreground" Value="#777"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Ensure ComboBox items use black text in dropdown despite global TextBlock style -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Border" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#e6e6e6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid VerticalAlignment="Top" HorizontalAlignment="Center">
        <Border Background="#2a2a2a" 
                CornerRadius="8" 
                Padding="8" 
                BorderBrush="Gray" 
                BorderThickness="1"
                VerticalAlignment="Top"
                HorizontalAlignment="Center">

            <StackPanel>

                <!-- Button Color Settings -->
                <StackPanel Orientation="Vertical" Margin="8">
                    <TextBlock Text="Button Color Settings" 
                               FontSize="14" 
                               FontWeight="Bold" 
                               Margin="0,0,0,6"/>

                    <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                        <TextBlock Text="Background:" Width="100" VerticalAlignment="Center"/>
                        <Button x:Name="BtnPickBackground" 
                                Width="150" 
                                Content="Pick Color" 
                                Click="BtnPickBackground_Click" 
                                Style="{StaticResource ColorButtonStyle}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                        <TextBlock Text="Foreground:" Width="100" VerticalAlignment="Center"/>
                        <Button x:Name="BtnPickForeground" 
                                Width="150" 
                                Content="Pick Color" 
                                Click="BtnPickForeground_Click" 
                                Style="{StaticResource ColorButtonStyle}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                        <TextBlock Text="Hover:" Width="100" VerticalAlignment="Center"/>
                        <Button x:Name="BtnPickHover" 
                                Width="150" 
                                Content="Pick Color" 
                                Click="BtnPickHover_Click" 
                                Style="{StaticResource ColorButtonStyle}"/>
                    </StackPanel>

                    <!-- Theme Selection and Management -->
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,2">
                        <TextBlock Text="Theme:" Width="100" VerticalAlignment="Center"/>
                        <ComboBox x:Name="CmbThemes" 
                                  Width="150" 
                                  Margin="0,0,5,0"
                                  SelectionChanged="CmbThemes_SelectionChanged"/>
                        <Button x:Name="BtnSaveTheme" 
                                Content="Save" 
                                Click="BtnSaveTheme_Click" 
                                Style="{StaticResource ModernButtonStyle}"
                                Width="50"/>
                        <Button x:Name="BtnDeleteTheme" 
                                Content="Delete" 
                                Click="BtnDeleteTheme_Click" 
                                Style="{StaticResource ModernButtonStyle}"
                                Width="50"/>
                    </StackPanel>
                </StackPanel>

                <!-- Separator -->
                <Separator Margin="8,-6,8,-6" Background="#444"/>

                <!-- Background Image Settings -->
                <StackPanel Orientation="Vertical" Margin="8">
                    <TextBlock Text="Background Image" 
                               FontSize="14" 
                               FontWeight="Bold" 
                               Margin="0,0,0,6"/>

                    <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                        <TextBlock Text="Background Path:" Width="100" VerticalAlignment="Center"/>
                        <TextBox x:Name="TxtBackground" 
                                 Width="220" 
                                 Margin="0,0,5,0"/>
                        <Button Content="Browse" 
                                Click="BrowseBackground" 
                                Style="{StaticResource ModernButtonStyle}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Separator -->
                <Separator Margin="8,-6,8,-6" Background="#444"/>

                <!-- Developer Mode Settings -->
                <StackPanel Orientation="Vertical" Margin="8">
                    <TextBlock Text="Extra Options" 
                               FontSize="12" 
                               FontWeight="Bold" 
                               Margin="0,0,0,4"/>

                    <!-- Enable Music Presence -->
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,2">
                        <CheckBox x:Name="ChkMusicPresence" 
                                  Content="Enable Music Presence" 
                                  Margin="0" 
                                  Foreground="White" 
                                  Checked="ChkMusicPresence_Checked" 
                                  Unchecked="ChkMusicPresence_Unchecked"
                                  VerticalAlignment="Center"/>
                        <TextBlock Text="Allows data collection on music." 
                                   TextWrapping="Wrap"
                                   Foreground="#AAA"
                                   FontSize="9"
                                   Margin="10,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Enable Debug Mode -->
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,2">
                        <CheckBox x:Name="ChkDebugMode" 
                                  Content="Enable Debug Mode" 
                                  Margin="0" 
                                  Foreground="White" 
                                  Checked="ChkDebugMode_Checked" 
                                  Unchecked="ChkDebugMode_Unchecked"
                                  VerticalAlignment="Center"/>
                        <TextBlock Text="Logs all activities." 
                                   TextWrapping="Wrap"
                                   Foreground="#AAA"
                                   FontSize="9"
                                   Margin="10,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Enable Developer Mode -->
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,2">
                        <CheckBox x:Name="ChkDevmode" 
                                  Content="Enable Developer Mode" 
                                  Margin="0" 
                                  Foreground="White" 
                                  Checked="ChkDevmode_Checked" 
                                  Unchecked="ChkDevmode_Unchecked"
                                  VerticalAlignment="Center"/>
                        <TextBlock Text="Enables extra features." 
                                   TextWrapping="Wrap"
                                   Foreground="#AAA"
                                   FontSize="9"
                                   Margin="10,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Update Interval Mode -->
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,2">
                        <TextBlock Text="Auto-update:" Width="100" VerticalAlignment="Center"/>
                        <ComboBox x:Name="CmbUpdateInterval" Width="185" />
                    </StackPanel>
                </StackPanel>

            </StackPanel>

        </Border>
    </Grid>
</UserControl>