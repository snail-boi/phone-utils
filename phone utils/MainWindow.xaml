<Window x:Class="phone_utils.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:phone_utils"
        Title="Phone Utilities" Height="677" Width="700"
        MinWidth="600" MinHeight="680">

    <Window.Resources>
        <!-- Modern Button Style using DynamicResource -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource ButtonForeground}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ButtonHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ButtonHover}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#d3d3d3"/>
                                <Setter Property="Foreground" Value="#777"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>


    <!-- Main layered Grid for fallback + image background -->
    <Grid>
        <!-- Fallback background color -->
        <Rectangle Fill="#111111"/>

        <!-- Background image -->
        <Image x:Name="BackgroundImage"
               Stretch="UniformToFill"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"/>


        <!-- Original content Grid -->
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- StatusText -->
                <RowDefinition Height="Auto"/>  <!-- DeviceStatusText + Refresh -->
                <RowDefinition Height="Auto"/>  <!-- BatteryText -->
                <RowDefinition Height="Auto"/>  
                <RowDefinition Height="Auto" MinHeight="150"/>  <!-- Action Buttons (fixed visual size) -->
                <RowDefinition Height="*"/>     <!-- ContentHost fills remaining space -->
            </Grid.RowDefinitions>

            <!-- Connection Status -->
            <TextBlock x:Name="StatusText"
                       Grid.Row="0"
                       Margin="0,0,0,5"
                       Text="Initializing..."
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#333"/>

            <!-- Device Status -->
            <TextBlock x:Name="DeviceStatusText"
                       Grid.Row="1"
                       Margin="0,0,0,5"
                       Text="Device Status: Unknown"
                       FontSize="14"
                       FontWeight="Normal"
                       Foreground="Gray"/>

            <!-- Battery Level -->
            <TextBlock x:Name="BatteryText"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"
                       Text="Battery: N/A"
                       TextAlignment="Right"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="Gray" Height="21" Width="670"/>

            <!-- Refresh button -->
            <Button x:Name="BtnRefresh"
                    Grid.Row="1"
                    Grid.RowSpan="2"
                    Content="Refresh device"
                    Width="120"
                    HorizontalAlignment="Right"
                    Style="{StaticResource ModernButtonStyle}"
                    Click="BtnRefresh_Click"
                    Margin="0,5,10,0"/>

            <!-- Action Buttons -->
            <UniformGrid Grid.Row="4"
                         Columns="2"
                         Rows="2"
                          Height="220"
                         Margin="0,10,0,10">
                <Button x:Name="BtnScrcpyOptions"
                        Content="Screencast"
                        Click="BtnScrcpyOptions_Click"
                        Style="{StaticResource ModernButtonStyle}"
                        IsEnabled="False"/>
                <Button x:Name="Intent"
                        Content="App Manager"
                        Click="Intent_click"
                        Style="{StaticResource ModernButtonStyle}"
                        IsEnabled="False"/>
                <Button x:Name="BtnSetup"
                        Content="Device Setup"
                        Click="BtnSetup_Click"
                        Style="{StaticResource ModernButtonStyle}"
                        IsEnabled="True"/>
                <Button x:Name="BtnSyncMusic"
                        Content="Sync Music to PC"
                        Click="BtnSyncMusic_Click"
                        Style="{StaticResource ModernButtonStyle}"
                        IsEnabled="False"/>
            </UniformGrid>

            <!-- Scrcpy embedded control placeholder -->
            <ContentControl x:Name="ContentHost"
                            Grid.Row="5"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Margin="0"/>
        </Grid>
    </Grid>
</Window>
