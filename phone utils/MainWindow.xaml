<Window x:Class="phone_utils.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:phone_utils"
        Title="Phone Utilities" Height="700" Width="700"
        MinWidth="600" MinHeight="680">

    <Window.Resources>
        <!-- Modern Button Style using DynamicResource -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource ButtonForeground}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ButtonHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ButtonHover}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#d3d3d3"/>
                                <Setter Property="Foreground" Value="#777"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Storyboard x:Key="SpinAnimation">
            <DoubleAnimation Storyboard.TargetName="SettingsIcon"
                     Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                     From="0" To="360" Duration="0:0:0.6"
                     AccelerationRatio="0.2" DecelerationRatio="0.2"/>
        </Storyboard>
    </Window.Resources>


    <!-- Main layered Grid for fallback + image background -->
    <Grid>
        <!-- Fallback background color (now dynamic) -->
        <Rectangle x:Name="MainBackgroundRect" Fill="#111111"/>

        <!-- Original content Grid -->
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- StatusText -->
                <RowDefinition Height="Auto"/>  <!-- DeviceStatusText + Refresh -->
                <RowDefinition Height="Auto"/>  <!-- BatteryText -->
                <RowDefinition Height="Auto"/>  
                <RowDefinition Height="Auto" MinHeight="150"/>  <!-- Action Buttons (fixed visual size) -->
                <RowDefinition Height="*"/>     <!-- ContentHost fills remaining space -->
            </Grid.RowDefinitions>

            <!-- Connection Status -->
            <TextBlock x:Name="StatusText"
                       Grid.Row="0"
                       Margin="0,0,0,5"
                       Text="Initializing..."
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#333"/>

            <!-- Device Status -->
            <TextBlock x:Name="DeviceStatusText"
                       Grid.Row="1"
                       Margin="0,0,0,5"
                       Text="Device Status: Unknown"
                       FontSize="14"
                       FontWeight="Normal"
                       Foreground="Gray"/>

            <!-- Battery Level -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <!-- Battery Text -->
                <TextBlock x:Name="BatteryText"
               Text="Battery: N/A"
               TextAlignment="Right"
               FontSize="16"
               FontWeight="Bold"
               Foreground="Gray"
               VerticalAlignment="Center"
               Margin="10,0,0,0"
               Height="21"
               Width="670" />

                <!-- Settings Button -->
                <Button x:Name="BtnSettings"
        Width="30"
        Height="30"
        Margin="10,0,0,0"
        Style="{StaticResource ModernButtonStyle}"
        Click="BtnSettings_Click">
                    <TextBlock x:Name="SettingsIcon"
               FontFamily="Segoe MDL2 Assets"
               Text="&#xE713;"
               FontSize="20"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               RenderTransformOrigin="0.5,0.5">
                        <TextBlock.RenderTransform>
                            <RotateTransform Angle="0"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                </Button>
            </StackPanel>


            <!-- Refresh button -->
            <Button x:Name="BtnRefresh"
                    Grid.Row="1"
                    Grid.RowSpan="2"
                    Content="Refresh"
                    Width="100"
                    HorizontalAlignment="Right"
                    Style="{StaticResource ModernButtonStyle}"
                    Click="BtnRefresh_Click"
                    Margin="0,5,0,10"/>

            <!-- Action Buttons -->
            <UniformGrid Grid.Row="4"
                         Columns="2"
                         Rows="2"
                          Height="220"
                         Margin="0,10,0,10">
                <Button x:Name="BtnScrcpyOptions"
                        Content="Screencast"
                        Click="BtnScrcpyOptions_Click"
                        Style="{StaticResource ModernButtonStyle}"
                        IsEnabled="False"/>
                <Button x:Name="Intent"
                        Content="App Manager"
                        Click="Intent_click"
                        Style="{StaticResource ModernButtonStyle}"
                        IsEnabled="False"/>
                <Button x:Name="BtnSetup"
                        Content="Device Setup"
                        Click="BtnSetup_Click"
                        Style="{StaticResource ModernButtonStyle}"
                        IsEnabled="True"/>
                <Button x:Name="BtnSyncMusic"
                        Content="Sync Files to PC"
                        Click="BtnSyncMusic_Click"
                        Style="{StaticResource ModernButtonStyle}"
                        IsEnabled="False"/>
            </UniformGrid>

            <!-- Scrcpy embedded control placeholder -->
            <ContentControl x:Name="ContentHost"
                            Grid.Row="5"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Margin="0"/>
        </Grid>
    </Grid>
</Window>
