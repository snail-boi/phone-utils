<UserControl x:Class="phone_utils.WakeTaskControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:phone_utils"
             Height="300" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Input Section -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <StackPanel Orientation="Vertical" Margin="0,0,5,0">
                <Label Content="Task Name"/>
                <TextBox x:Name="TaskNameTextBox" Width="120"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="0,0,5,0">
                <Label Content="Hour (HH)"/>
                <TextBox x:Name="HourTextBox" Width="40"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="0,0,5,0">
                <Label Content="Minute (MM)"/>
                <TextBox x:Name="MinuteTextBox" Width="40"/>
            </StackPanel>

            <Button x:Name="CreateTaskButton" Content="Create Task" Width="100" Margin="5,20,0,0" Click="CreateTaskButton_Click"/>
        </StackPanel>

        <!-- Task List -->
        <ListView x:Name="TaskListView" Grid.Row="1" Margin="0,0,0,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Task Name" DisplayMemberBinding="{Binding Name}" Width="150"/>
                    <GridViewColumn Header="Next Run" DisplayMemberBinding="{Binding NextRun}" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Delete Button and Info -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button x:Name="DeleteTaskButton" Content="Delete Selected Task" Width="150" Click="DeleteTaskButton_Click"/>
            <TextBlock x:Name="InfoText" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
