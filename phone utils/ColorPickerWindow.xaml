<Window x:Class="phone_utils.ColorPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pick Color" Height="220" Width="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Red -->
        <StackPanel Orientation="Horizontal" Margin="0,2">
            <TextBlock Text="R:" Width="30" VerticalAlignment="Center"/>
            <Slider x:Name="SliderR" Minimum="0" Maximum="255" ValueChanged="Slider_ValueChanged" Width="200"/>
            <TextBlock x:Name="TxtR" Width="40" VerticalAlignment="Center" TextAlignment="Center"/>
        </StackPanel>

        <!-- Green -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,2">
            <TextBlock Text="G:" Width="30" VerticalAlignment="Center"/>
            <Slider x:Name="SliderG" Minimum="0" Maximum="255" ValueChanged="Slider_ValueChanged" Width="200"/>
            <TextBlock x:Name="TxtG" Width="40" VerticalAlignment="Center" TextAlignment="Center"/>
        </StackPanel>

        <!-- Blue -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,2">
            <TextBlock Text="B:" Width="30" VerticalAlignment="Center"/>
            <Slider x:Name="SliderB" Minimum="0" Maximum="255" ValueChanged="Slider_ValueChanged" Width="200"/>
            <TextBlock x:Name="TxtB" Width="40" VerticalAlignment="Center" TextAlignment="Center"/>
        </StackPanel>

        <!-- Color preview -->
        <Border Grid.Row="3" Height="50" Margin="0,10" Background="Black" x:Name="ColorPreview" CornerRadius="4" BorderBrush="Gray" BorderThickness="1"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="75" Margin="5" Click="BtnOk_Click"/>
            <Button Content="Cancel" Width="75" Margin="5" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
